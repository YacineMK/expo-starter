#!/bin/sh

echo "Running pre-commit hook"

# Run prettier
echo "ğŸ¨ Running prettier"
npx prettier --check domain/* app/* presentation/*

if [ $? -ne 0 ]; then 
    echo "Prettier failed ğŸ”´, please run 'npx prettier --write domain/* app/* presentation/*' and commit again"
    exit 1
fi

# Run eslint
echo "ğŸ” Running eslint"
npx eslint domain/* app/* presentation/*
if [ $? -ne 0 ]; then 
    echo "Eslint failed ğŸ”´, please fix linting issues. and commit again"
    exit 1
fi

echo "âœ… All checks passed"


